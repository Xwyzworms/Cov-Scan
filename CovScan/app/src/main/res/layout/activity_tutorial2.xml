<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

<androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewTutorial3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cov_tutorial2"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTutorial3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="CT - Covid"
        android:textColor="@color/fullBluePrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTutorial3" />

    <TextView
        android:id="@+id/tutorial3Informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="41dp"
        android:textSize="15sp"
        android:text="Dengan Teknologi Deep Learning untuk mengenali jenis CT - Scan paru-paru yang terindikasi menderita Covid-19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTutorial3" />

    <ImageView
        android:id="@+id/tutorial2Btn1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/ic_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <ImageView
        android:id="@+id/tutorial2Btn2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/ic_placeholder_indicator"
        app:layout_constraintStart_toEndOf="@+id/tutorial2Btn1"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <ImageView
        android:id="@+id/tutorial2Btn3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_indicator"
        app:layout_constraintStart_toEndOf="@+id/tutorial2Btn2"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <Button
        android:id="@+id/btnTutorial2BtnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial2Btn1" />

    <Button
        android:id="@+id/btnTutorial2Selanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:layout_marginRight="30dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial2Btn3" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>