<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewTutorial3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cov_tutorial1"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTutorial3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Informasi Covid"
        android:textColor="@color/fullBluePrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTutorial3" />

    <TextView
        android:id="@+id/tutorial3Informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="41dp"
        android:textSize="15sp"
        android:text="Dapatkan informasi Seputar Covid 19 dari sumber gugus tugas Covid-19 Kementrian Kesehatan dan KawalCorona.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTutorial3" />

    <Button
        android:id="@+id/tutorial3Btn1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/circledrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <Button
        android:id="@+id/tutorial3Btn2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/circledrawable"
        app:layout_constraintStart_toEndOf="@+id/tutorial3Btn1"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <Button
        android:id="@+id/tutorial3Btn3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circledrawable"
        app:layout_constraintStart_toEndOf="@+id/tutorial3Btn2"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Informasi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Btn1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lewati"
        android:layout_marginRight="30dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial3Btn3" />


</androidx.constraintlayout.widget.ConstraintLayout>